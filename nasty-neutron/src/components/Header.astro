---
const logoIconPath = '/assets/logo-darkmode.png';
const sunIconPath = '/assets/sun.png';
const moonIconPath = '/assets/moon.png';
const spainFlagPath = '/assets/spain.png';
const ukFlagPath = '/assets/uk.png';
---

<header class="header">
    <div class="header-content">
        <a href="/" class="logo">
            <img src={logoIconPath} alt="Logo" />
        </a>
        <div class="navigation-right">
            <a href="#sobre-mi">Sobre mí</a>
            <a href="#experiencia">Experiencia</a>
            <a href="#proyectos">Proyectos</a>
            <a href="#educacion">Educación</a>
            <a href="#contacto">Contacto</a>
            <button id="theme-toggle">
                <img src={sunIconPath} alt="Toggle Dark/Light Mode" />
            </button>
            <button id="lang-en">
                <img src={ukFlagPath} alt="Toggle Spanish/English Language" />
            </button>
        </div>
    </div>
</header>
        

<style>
.header {
    width: 100%;
    height: 6.25rem;
    display: flex;
    justify-content: flex-end; 
    align-items: center;
    padding: 0 2rem;
    color: white;
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%; 
}

.logo {
    height: 4.5rem;
}

.logo img {
    padding-left: 2rem;
    height: 3.25rem;
    width: auto;
}

.navigation-right {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-grow: 1;
}

.navigation-right a, .navigation-right button {
    margin: 0 0.5rem; 
    padding: 0 0.2rem;
    display: flex;
    align-items: center;
    background: none; 
    border: none;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.navigation-right a {
    margin-right: 15px;
    font-weight: bold;
    color: white;
    text-decoration: none;
    font-size: 1.15rem;
}

.navigation-right a:hover, .navigation-right button:hover {
    transform: translateY(-2px);
    color: #427bff;
}

</style>
