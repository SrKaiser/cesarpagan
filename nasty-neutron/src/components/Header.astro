---
// Este es el área de Frontmatter Script de Astro, donde puedes escribir JavaScript.
const logoIconPath = '/assets/logo-darkmode.png';
const linkedInIconPath = '/assets/linkedin-darkmode.png';
const gitHubIconPath = '/assets/github-darkmode.png';
const sunIconPath = '/assets/sun.png';
const moonIconPath = '/assets/moon.png';
const spainFlagPath = '/assets/spain.png';
const ukFlagPath = '/assets/uk.png';
---

<header class="header">
    <a href="/" class="logo">
        <img src={logoIconPath} alt="Logo" />
    </a>
    <div class="navigation-center">
        <a href="#inicio">Inicio</a>
        <a href="#sobre-mi">Sobre mí</a>
        <a href="#proyectos">Proyectos</a>
        <a href="#educacion">Educación</a>
        <a href="#contacto">Contacto</a>
    </div>
    <nav>
        <a href="https://www.linkedin.com/in/cesarpaganv/" target="_blank">
            <img src={linkedInIconPath} alt="LinkedIn" />
        </a>
        <a href="https://github.com/SrKaiser" target="_blank">
            <img src={gitHubIconPath} alt="GitHub" />
        </a>
        <button id="theme-toggle">
            <img src={sunIconPath} alt="Toggle Dark/Light Mode" />
        </button>
        <button id="lang-en">
            <img src={ukFlagPath} alt="Toggle Spanish/English Language" />
        </button>
    </nav>
</header>

<style>
.header {
    width: 100%;
    height: 4.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    background-color: #242831;
    color: white;
}

.logo img, .navigation-center a, nav a, nav button {
    height: 3.5rem;
    padding: 0 0.5rem;
    display: flex;
    align-items: center;
}

.navigation-center {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
}

.navigation-center a {
    margin: 0 1rem;
    font-weight: bold;
    color: white;
    text-decoration: none;
    font-size: 1rem;
}

.navigation-center a:hover {
    color: #666b7a;
}

nav {
    display: flex;
    align-items: center;
}

nav a, nav button {
    margin: 0 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    transition: transform 0.3s ease;
}

nav a:hover, nav button:hover {
    transform: translateY(-2px);
}

img {
    height: 2.35rem;
    width: auto;
}
</style>
