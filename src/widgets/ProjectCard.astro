---
const { project, language } = Astro.props;
import Flutter from '../svg/tech/Flutter.astro';
import Firebase from '../svg/tech/Firebase.astro';
import Java from '../svg/tech/Java.astro';
import NET from '../svg/tech/NET.astro';
import React from '../svg/tech/React.astro';
import Node from '../svg/tech/Node.astro';
import HTML from '../svg/tech/HTML.astro';
import Bootstrap from '../svg/tech/Bootstrap.astro';
import CSS from '../svg/tech/CSS.astro';
import Dart from '../svg/tech/Dart.astro';
import C from '../svg/tech/C.astro';

const technologyComponents = {
    'Dart': Dart,
    'C': C,
    'Flutter': Flutter,
    'Firebase': Firebase,
    'Java': Java,
    'React': React,
    'NET': NET,
    'Node': Node,
    'HTML': HTML,
    'Bootstrap': Bootstrap,
    'CSS': CSS,
};
---
