<style>

    .card-container:nth-of-type(2n) {
        justify-content: flex-end; 
    }

    .card-container:nth-of-type(2n) {
        margin-top: 10rem; 
    }

    .card-container {
        display: flex;
        justify-content: flex-start; 
        width: 45%;
        height: 280px;
        position: relative;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 1px #000000ee;
        overflow: hidden;
    }

    .card-container::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background: rgba(0, 0, 0, 0.5); 
        z-index: 1;
    }

    .card .front-content, .card .content {
        position: relative;
        z-index: 2;
    }

    .card {
        width: 100%;
        height: 100%;
        border-radius: inherit;
    }

    .card .front-content {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .card .front-content p {
        font-size: 32px;
        font-weight: 800;
        opacity: 1;
        color: var(--blue-titles-color);
        background-clip: text;
        transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
        text-shadow: 
        -1px -1px 0 #09276d,  
        1px -1px 0 #09276d,   
        -1px 1px 0 #09276d,  
        1px 1px 0 #09276d; 
    }

    .card .content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 10px;
        background: linear-gradient(90deg, var(--project-card-color1) 50%, var(--project-card-color2) 100%);
        color: var(--text-color);
        padding: 60px;
        padding-right: 120px;
        font-size: 18px;
        line-height: 1.5;
        border-radius: 5px;
        transform: translateX(-96%);
        transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .card .content .heading {
        font-size: 32px;
        font-weight: 700;
    }

    .card-container:hover .content {
        transform: translateY(0);
    }

    .card-container:nth-of-type(2n+1):hover .front-content {
        transform: translateX(-30%);
    }

    .card-container:nth-of-type(2n):hover .front-content {
        transform: translateX(30%);
    }

    .card:hover .front-content p {
        opacity: 0;
    }

    .card-container:nth-of-type(2n) .content {
        background: linear-gradient(-90deg, var(--project-card-color1) 50%, var(--project-card-color2) 100%);
        transform: translateX(96%);
        transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
        padding-left: 120px;
    }

    .card-container:nth-of-type(2n):hover .content {
        transform: translateX(0%);
    }

    .project-button {
        display: inline-block;
        margin: 10px;
        padding: 10px 10px;
        font-size: 16px;
        color: #fff;
        border: none;
        border-radius: 50%;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease;
        cursor: pointer;
        pointer-events: all; 
    }

    .project-button svg {
        fill: #ffffff; 
        width: 30px; 
        height: 30px; 
    }

    .video-button {
        background-color: #FF0000; 
    }

    .video-button:hover {
        background-color: #CC0000; 
    }

    .github-button {
        background-color: #333; 
    }

    .github-button:hover {
        background-color: #2a2a2a; 
    }

    .github2-button {
        background-color: #8c8c8c; 
    }

    .github2-button:hover {
        background-color: #757575; 
    }

    .playstore-button {
        background-color: #ffffff;
    }

    .playstore-button:hover {
        background-color: #dadada;
    }

    .appstore-button {
        background-color: #000000;
    }

    .appstore-button:hover {
        background-color: #1a1a1a;
    }

    .buttons-sidebar {
        padding: 10px 10px;
        position: absolute;
        top: 0;
        right: 0; 
        width: 60px; 
        height: 100%;
        background-color: var(--buttons-sidebar-color); 
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 10px;
        pointer-events: all;
        z-index: 1; 
    }

    .card-container:nth-of-type(2n) .buttons-sidebar {
        left: 0;
    }

    @media (max-width: 768px) {
    .card-container {
        width: 100%;
        margin-bottom: 5rem;
    }

    .card .content {
        padding: 10px; 
        font-size: 14px;
    }

    .card .content .heading {
        font-size: 24px;
    }

    .card-container:nth-of-type(2n) .content, .card-container:not(:nth-of-type(2n)) .content {
        transition: transform 0.6s ease-out;
    }

    .card-container:nth-of-type(2n) .content {
        padding-left: 30px;
    }

    .project-button svg {
        fill: #ffffff; 
        width: 20px; 
        height: 20px; 
    }

    .card-container:nth-of-type(2n) {
        margin-top: 0rem; 
    }

}
</style>

<script>
    // Actualizar cuando cambia el idioma
    document.addEventListener('languageChanged', (event) => {
        if (event instanceof CustomEvent && event.detail && event.detail.language) {
            updateProjectCards(event.detail.language);
        }
    });

    // Inicializar con el idioma actual
    document.addEventListener('DOMContentLoaded', () => {
        const currentLanguage = localStorage.getItem('language') || 'spanish';
        updateProjectCards(currentLanguage);
    });

    // Función para actualizar las tarjetas de proyectos
    function updateProjectCards(language) {
        // Actualizar títulos de proyectos
        document.querySelectorAll('.project-title, .project-heading').forEach(element => {
            const spanishTitle = element.getAttribute('data-spanish-title');
            const englishTitle = element.getAttribute('data-english-title');
            
            if (language === 'spanish' && spanishTitle) {
                element.textContent = spanishTitle;
            } else if (language === 'english' && englishTitle) {
                element.textContent = englishTitle;
            }
        });
        
        // Actualizar descripciones de proyectos
        document.querySelectorAll('.project-description').forEach(element => {
            const spanishDesc = element.getAttribute('data-spanish-description');
            const englishDesc = element.getAttribute('data-english-description');
            
            if (language === 'spanish' && spanishDesc) {
                element.textContent = spanishDesc;
            } else if (language === 'english' && englishDesc) {
                element.textContent = englishDesc;
            }
        });
    }
</script>
