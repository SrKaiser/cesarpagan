---
import LinkedIn from '../svg/LinkedIn.astro';
import GitHub from '../svg/GitHub.astro';
import CV from '../svg/CV.astro';
const { currentLanguage } = Astro.props;
---

<div id="intro" class="intro">
    <img src='/assets/profile-pic.png' alt="César Pagán" class="profile-pic">
    <h1 id="name">César Pagán</h1>
    <h2 id="title">{currentLanguage === 'spanish' ? 'Ingeniero de Software' : 'Software Engineer'}</h2>
    <h3 id="motto">{currentLanguage === 'spanish' ? 'Pasión por la tecnología, compromiso con la excelencia.' : 'Passion for technology, commitment to excellence.'}</h3>
    <div class="row">
        <a href="https://www.linkedin.com/in/cesarpaganv/" target="_blank">
            <div class="icon-text">
                <LinkedIn/>
                <span>LinkedIn</span>
            </div>
        </a>
        <a href="https://github.com/SrKaiser" target="_blank">
            <div class="icon-text">
                <GitHub/>
                <span>GitHub</span>
            </div>
        </a>
        <a href="https://drive.google.com/file/d/1I9PHgZIUCRDernJl5Io0niXtUaD9PMp3/view?usp=sharing" target="_blank">
            <div class="icon-text">
                <CV/>
                <span>{currentLanguage === 'spanish' ? 'Currículum' : 'Resume'}</span>
            </div>
        </a>
    </div>
</div>


<style>
    .intro {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin-top: 8rem;
    }
    
    .profile-pic {
        width: 220px; 
        height: auto; 
        aspect-ratio: 1 / 1; 
        border-radius: 50%;
        border: 3px solid var(--background-color); 
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    h1 {
        font-size: 4.5rem;
        font-weight: 700;
    }

    h2 {
        font-size: 3.5rem;
        font-weight: 600;
        color: var(--blue-titles-color);
        position: relative;
    }

    h3 {
        font-size: 2rem;
        font-weight: 500;
        opacity: 0.7;
        margin-top: 1rem;;
        position: relative;
        margin-bottom: 1rem;
    }

    .row {
        display: flex;
        justify-content: center;
        gap: 3.25rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .row a {
        font-weight: bold;
        margin-right: 0.5rem;
        transition: transform 0.3s ease; 
        
    }

    .icon-text {
        display: flex;
        align-items: center; 
    }

    .row a:hover {
        transform: scale(1.05);
    }

    .row span {
        font-size: 0.95rem;
        opacity: 0.55;
        transition: opacity 0.3s ease;
        margin-left: 8px;
    }

    .row a:hover span {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .intro {
            margin-bottom: 9rem;
        }

        .profile-pic {
            width: 150px; 
            height: auto; 
        }

        .intro h1 {
            font-size: 3rem;
        }

        .intro h2 {
            font-size: 1.75rem;
        }

        .intro h3 {
            font-size: 1rem;
            padding: 0 10px;
        }
        
        .row {
            flex-wrap: wrap;
        }

        .row a{
            margin-right: 0px;
        }

        .icon-text {
            transform: scale(1);
            margin-right: 0px;
        }

        .icon-text span{
            font-size: 0.85rem;
        }

    }
</style>
