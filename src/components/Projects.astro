---
const projects = [

    {
        title: {
            spanish: "Who Is That Player - Football",
            english: "Who Is That Player - Football",
        },
        description: {
            spanish: "Juego móvil que consiste en adivinar el jugador de fútbol que se muestra en la pantalla, con diferentes funcionalidades extras y modos de juego.",
            english: "Mobile game that consists of guessing the football player that appears on the screen, with additional features and game modes.",
        },
        image: "/assets/projects/WhoIsThatPlayer.png",
        playStore: "https://play.google.com/store/apps/details?id=com.football_guessing.app",
        appStore: "https://apps.apple.com/es/app/who-is-that-player-football/id6744461899?l&platform=iphone",
        technologies: ["Flutter", "Dart", "Firebase"],
    },

    {
        title: {
            spanish: "Magic Mirror",
            english: "Magic Mirror",
        },
        description: {
            spanish: "Aplicación móvil diseñada para funcionar como apoyo en terapias, desarrollada con Flutter y Firebase para el seguimiento de eventos traumáticos pendientes de resolver.",
            english: "Mobile application designed to support therapy sessions, developed with Flutter and Firebase to track unresolved traumatic events.",
        },
        image: "/assets/projects/MagicMirror.png",
        video: "https://youtu.be/IIt-OtngdcM?si=BkonZinX9mCePxqE",
        github: "https://github.com/SrKaiser/Magic-Mirror-TFG",
        technologies: ["Flutter", "Dart", "Firebase"],
    },

    {
        title: {
            spanish: "Super Ekko Game",
            english: "Super Ekko Game",
        },
        description: {
            spanish: "Videojuego para ordenador desarrollado durante mi primer año de carrera, creado únicamente en C.",
            english: "Computer game developed during my first year of college, created entirely in C.",
        },
        image: "/assets/projects/SuperEkkoGame.png",
        video: "https://youtu.be/yqiMUC1myy8?si=YFherAN6iwWUfcpU",
        technologies: ["C"],
    },

    {
        title: {
            spanish: "AppVideo",
            english: "AppVideo",
        },
        description: {
            spanish: "Aplicación de escritorio con diferentes funcionalidades similares a otras plataformas de video de las que ha sido inspirada. Desarrollada en Java siguiendo diferentes patrones, Swing, Maven, Java Bean y H2.",
            english: "Desktop application with various features similar to other video platforms that inspired it. Developed in Java following various patterns, Swing, Maven, Java Bean, and H2.",
        },
        image: "/assets/projects/AppVideo.png",
        github: "https://github.com/SrKaiser/AppVideo",
        technologies: ["Java"],
    },

    {
        title: {
            spanish: "DishDiscover",
            english: "DishDiscover",
        },
        description: {
            spanish: "Proyecto Full-Stack que simula una aplicación de servicio de entrega de comida a domicilio. Se centra principalmente en la API del back-end utilizando Java y .NET, el front-end lo hace funcionar empleando React, Node, HTML, CSS y Bootstrap.",
            english: "Full-Stack project simulating a home food delivery service application. It primarily focuses on the back-end API using Java and .NET, with the front-end powered by React, Node, HTML, CSS, and Bootstrap.",
        },
        image: "/assets/projects/DishDiscover2.png",
        github: "https://github.com/SrKaiser/Frontend-Restaurantes",
        github2: "https://github.com/SrKaiser/Backend-Restaurantes",
        technologies: [
            "Java",
            "NET",
            "React",
            "Node",
            "HTML",
            "CSS",
            "Bootstrap",
        ],
    },
];

import ProjectCard from "../widgets/ProjectCard.astro";

const { currentLanguage } = Astro.props;
---

<section id="projects" class="projects">
    <div>
        <h1 class="section-title text-center" id="project-title" data-i18n="projects-title">
            {currentLanguage === 'spanish' ? 'Proyectos' : 'Projects'}
        </h1>
        <div class="projects-container">
            {
                projects.map((project) => (
                    <ProjectCard project={project} key={project.title} language={currentLanguage} />
                ))
            }
        </div>
    </div>
</section>

<script>
    // Actualizar cuando cambia el idioma
    document.addEventListener('languageChanged', (event) => {
        if (event instanceof CustomEvent && event.detail && event.detail.language) {
            // El título se actualiza automáticamente a través del sistema central de traducciones
            // No necesitamos actualizar las tarjetas de proyectos aquí porque se manejan en ProjectCard.astro
        }
    });
</script>

<style>
    .projects-container {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        justify-content: space-between;
        margin-top: 3rem;
        margin-bottom: 10rem;
    }

    @media (max-width: 768px) {
        .section-title {
            margin-top: 0rem;
        }

        .projects-container {
            margin-bottom: 0rem;
        }
    }
</style>
