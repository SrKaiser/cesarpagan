---
const jobs = [
    {
        title: {
            spanish: "Desarrollador Full-Stack",
            english: "Full-Stack Developer"
        },
        company:{
            spanish: "Verdementa",
            english: "Verdementa"
        },
        description: {
            spanish: "Desarrollador Full-Stack sobre la web de Verdementa con Django, Postgres y Redis, integrando funcionalidades front-end con tecnologías como JavaScript, HTML, CSS y Bootstrap.",
            english: "Full-Stack Developer at Verdementa using Django, Postgres, and Redis, integrating front-end functionalities with technologies like JavaScript, HTML, CSS, and Bootstrap."
        },
        period: {
            spanish: "Octubre 2023 - Presente",
            english: "October 2023 - Present"
        },
        color: "#54b948",
        technologies: ["Django", "Python", "PostgreSQL", "Redis", "Javascript", "HTML", "Bootstrap", "CSS"], 
    },
    {
        title: {
            spanish: "Desarrollador Full-Stack y Soporte Técnico",
            english: "Full-Stack Developer and Technical Support"
        },
        company:{
            spanish: "Ayuntamiento de Cartagena",
            english: "Cartagena City Council"
        },
        description: {
            spanish: "Contrato de prácticas currículares. Desarrollo de aplicaciones web con ASP.NET MVC y móviles Xamarin.Forms. (C#, HTML, XML y JavaScript). Resolución de incidencias, preparación y montaje de ordenadores para empleados.",
            english: "Curricular internship contract. Development of web applications with ASP.NET MVC and mobile apps with Xamarin.Forms. (C#, HTML, XML, and JavaScript). Troubleshooting and setting up computers for employees."
        },
        period: {
            spanish: "Julio 2022 - Agosto 2022",
            english: "July 2022 - August 2022"
        },
        color: "#378baf",
        technologies: ["ASPNet", "Xamarin", "CSharp", "Javascript", "HTML", "CSS", "XML"],
    },
];


import JobCard from "../widgets/JobCard.astro";

const { currentLanguage } = Astro.props;

---

<section id="experience" class="experience">
    <div>
        <h1 class="section-title" id="experience-title"> {currentLanguage === 'spanish' ? 'Experiencia' : 'Experience'} </h1>
        <div class="experience-container">
            {jobs.map((job) => <JobCard job={job} key={job.company} language={currentLanguage}/>)}
        </div>
    </div>
</section>

<style>
    .experience {
        text-align: center;
        padding: 50px 0; 
    }

    .experience-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 50px;
        color: #ffffff;
        text-align: center;
        height: auto;
        padding: 50px;
        margin-bottom: 5rem;
    }

    .section-title {
        margin-top: 16rem;
    }

    @media (max-width: 768px) {
        .section-title {
            margin-top: 0rem;
        }

        .experience-container {
            margin-bottom: 0rem;
        }
        
    }


</style>
